<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.bentonfoundation.bentonmobile"
	version 	= "0.1">

	<name>Benton Mobile</name>

	<description>
		Benton Foundation's Mobile App
	</description>

	<author href="http://benton.org"
		email="jisett@benton.org">
		Jeremy Isett
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
		<gap:platform name="webos" />
	</gap:platforms>

	<icon src="icon.png" gap:role="default" />
	<gap:splash src="resources/images/splash.png"/>
	
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/network" />
	<!-- <preference name="autorotate" value="false" readonly="true"/> -->
</widget>